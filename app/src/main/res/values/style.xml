<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/login_text</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dim_20sp</item>
        <item name="android:padding">@dimen/dim_20dp</item>
    </style>
    <style name="email_style">
        <item name="android:hint">@string/email_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dim_20dp</item>
        <item name="android:layout_marginRight">@dimen/dim_30dp</item>
        <item name="android:layout_marginLeft">@dimen/dim_30dp</item>
    </style>

    <style name="password_style">
        <item name="android:hint">@string/password_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dim_20dp</item>
        <item name="android:layout_marginRight">@dimen/dim_30dp</item>
        <item name="android:layout_marginLeft">@dimen/dim_30dp</item>
    </style>
    <style name="use_phone">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dim_30dp</item>
        <item name="android:layout_marginBottom">@dimen/dim_30dp</item>
        <item name="android:text">@string/use_phone_number</item>
        <item name="android:textColor">#0583EA</item>
        <item name="android:textSize">@dimen/dim_15sp</item>
    </style>
    <style name="or">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dim_30dp</item>
        <item name="android:layout_marginBottom">@dimen/dim_30dp</item>
        <item name="android:text">@string/or</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/dim_20sp</item>
    </style>
    <style name="login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/login_text</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dim_20sp</item>
        <item name="android:padding">@dimen/dim_20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/dim_30dp</item>
        <item name="android:layout_marginRight">@dimen/dim_30dp</item>
    </style>
    <style name="facebook_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/fb_continue</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/dim_20sp</item>
        <item name="android:background">@drawable/facebook_bg</item>
        <item name="android:padding">@dimen/dim_20dp</item>
        <item name="android:layout_marginLeft">@dimen/dim_30dp</item>
        <item name="android:layout_marginRight">@dimen/dim_30dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>